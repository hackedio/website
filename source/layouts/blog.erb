<header>
  <div class="logo">
    <a href="/"><img src="/images/logo-text.png" alt="HACKED: Learn>Build>Share"></a>
  </div>

  <ul role="navigation">
    <%= nav_link_to("Venue+Travel", "/venue/") %>
    <%= nav_link_to("Tickets", "/tickets/") %>
    <%= nav_link_to("Sponsorship", "/sponsorship/") %>
    <%= nav_link_to("Questions?", "/questions/") %>
  </ul>
</header>

<div class="container" role="main">
  <section class="blog">
  <h1><%= current_page.data.title %></h1>
  <%= yield %>
  </section>
</div>

<footer>
  <p>&copy; <%= copyright_years(2013) %> <a href="https://thelab.o2.com/">The Lab</a> and <a href="http://geeksoflondonc.om/">Geeks of London Ltd</a></p>
</footer>

  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" %>

  <script>
    window.jQuery || document.write('<script src="/javascripts/libs/jquery-1.9.0.min.js"><\/script>')
  </script>

  <%= javascript_include_tag "libs/holder" %>
  <%= javascript_include_tag "plugins", "script" %>
</body>
